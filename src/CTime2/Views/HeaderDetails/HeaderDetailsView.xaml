<UserControl
    x:Class="CTime2.Views.HeaderDetails.HeaderDetailsView"
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CTime2.Views.HeaderDetails"
    xmlns:windowsStateTriggers="using:WindowsStateTriggers"
    xmlns:controls="using:CTime2.Controls"
    
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d"
    
    Height="46"
    Width="46">
    <Grid>

        <controls:UserImage Width="40"
                            Height="40"
                            Image="{x:Bind ViewModel.CurrentUserImage, Mode=OneWay}"
                            BorderBrush="LightGray"
                            BorderThickness="2" />

    </Grid>
</UserControl>
