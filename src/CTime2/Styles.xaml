<ResourceDictionary
    x:Class="CTime2.Styles"
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="CTimeGreenColor">#3FC380</Color>
    <Color x:Key="CTimeRedColor">#e74c3c</Color>
    <Color x:Key="CTimeOrangeColor">#f1c40f</Color>
    <SolidColorBrush x:Key="CTimeGreen" Color="{StaticResource CTimeGreenColor}" />
    <SolidColorBrush x:Key="CTimeRed" Color="{StaticResource CTimeRedColor}" />
    <SolidColorBrush x:Key="CTimeOrange" Color="{StaticResource CTimeOrangeColor}" />

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="BorderBrush" Color="#7A7A7A" />
        </ResourceDictionary>
        <ResourceDictionary x:Key="Dark">
            <SolidColorBrush x:Key="BorderBrush" Color="#797979" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

</ResourceDictionary>
